{% extends "base_campus.twig" %}

{% block content %}

    <form id="userpass" action="{{ currentUrl }}" method="post" name="f">

        {% if wrongUserPass == true %}
            <div id="wrong_user_pass" class="alert alert-danger" role="alert">{{ '{campusMultiauth:wrong_user_pass}'|trans }}</div>
        {% endif %}

        <p>
            <label for="username">{{ '{campusMultiauth:username}'|trans }}</label>
            <br>
            <span>
                <input id="username" class="input" type="text" name="username">
            </span>
        </p>
        <p>
            <label for="password">{{ '{campusMultiauth:password}'|trans }}</label>
            <br>
            <span>
                <input id="password" class="input" type="password" name="password" autocomplete="current-password">
            </span>
        </p>
        <div id="userpass_login_button" class="row">
            <p id="submit" class="btn-wrap">
                <button id="submit_button" class="btn" type="submit">
                    <span>
                        {{ '{campusMultiauth:login}'|trans }}
                    </span>
                </button>
            </p>
        </div>
        <input type="hidden" id="authstate" name="authstate" value="{{ authstate }}" />
        <input type="hidden" id="source" name="source" value="campus-userpass" />
    </form>

    <form id="external" action="{{ currentUrl }}" method="post" name="g">
        <div class="row">
            <div class="col-md-4">
                <button id="google" class="btn btn-block social" type="submit" name="idpentityid" value="https://login.elixir-czech.org/google-idp/">
                    <img alt="icon" src="data:image/png;base64,">
                    <strong> Google </strong>
                </button>
            </div>
            <div class="col-md-4">
                <button id="linkedin" class="btn btn-block social" type="submit" name="idpentityid" value="https://login.elixir-czech.org/linkedin-idp/">
                    <img alt="icon" src="data:image/png;base64,">
                    <strong> Linkedin </strong>
                </button>
            </div>
            <div class="col-md-4">
                <button id="orcid" class="btn btn-block social" type="submit" name="idpentityid" value="https://login.elixir-czech.org/orcid-idp/">
                    <img alt="icon" src="data:image/png;base64,">
                    <strong> ORCID </strong>
                </button>
            </div>
        </div>

        <input type="hidden" id="authstate" name="authstate" value="{{ authstate }}" />
        <input type="hidden" id="source" name="source" value="default-sp" />
    </form>

    <div class="metalist list-group">
        <form action="{{ currentUrl }}" method="post">
            {% for idp in metadata %}
                <button class="metaentry list-group-item" type="submit" name="idpentityid" value="{{ idp.entityid }}">
                    <strong>{{ idp.name.en }}</strong>
                </button>
            {% endfor %}

            <input type="hidden" id="authstate" name="authstate" value="{{ authstate }}" />
            <input type="hidden" id="source" name="source" value="default-sp" />
        </form>
    </div>

{% endblock %}
